{
  "name": "jamal",
	"displayName": "jamal",
	"description": "Extension for aiding in android mobile analysis.",
	"version": "0.1.0",
	"icon": "assets/icon.png",
	"license": "See license in LICENSE.md",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:jamal.runAnalysis",
		"onCommand:jamal.previewcfg",
		"onCommand:jamal.previewdfg"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "soot",
				"aliases": ["Soot IR", "Jimple","Grimple","Dava","Jasmin"],
				"extensions": [".jimple",".grimple",".dava",".jasmin"],
				"configuration": "./language-configuration.json"
        	}
		],
    	"grammars": [
			{
            	"language": "soot",
            	"scopeName": "source.jimple",
            	"path": "./syntaxes/jimple.tmLanguage.json"
    	   	}
		],
		"commands": [
			{
				"command": "jamal.runAnalysis",
				"title": "JAMAL: Run Analysis"
			},
			{
				"command": "jamal.previewcfg",
				"title": "Open CFG Preview to the side"
			},
			{
				"command": "jamal.previewdfg",
				"title": "Open DFG Preview to the side"
			}
		],
		"menus": {
			"explorer/context": [{
				"when": "resourceExtname == .apk",
				"command":"jamal.runAnalysis",
				"group": "navigation@+1"
			}],
			"editor/context": [{
				"command": "jamal.previewcfg",
				"group": "navigation@1",
				"when": "resourceExtname == .jimple || resourceExtname == .grimple"
				
			},{
				"command": "jamal.previewdfg",
				"group": "navigation@2",
				"when": "resourceExtname == .jimple || resourceExtname == .grimple"
			}]
		},
		"configuration":[
			{
				"title": "Jamal",
				"properties": {
					"conf.soot.binary.path":{
						"type":"string",
						"description": "Path for Soot binary file",
						"default":"C:\\Users\\kaftejiman\\mobile_research\\soot-4.2.1-jar-with-dependencies.jar"
					},
					"conf.java.binary.path":{
						"type":"string",
						"description": "Path for java binary",
						"default":"C:\\Program Files\\AdoptOpenJDK\\jre-15.0.2.7-hotspot\\bin\\java.exe"
					},
					"conf.java.memory.limit":{
						"type":"string",
						"description": "Maximum memory allocated to the JVM for soot analysis.",
						"default": "2G"
					},
					"conf.android.platforms.path":{
						"type":"string",
						"description": "Path to the android platforms summaries",
						"default":"C:\\Users\\kaftejiman\\mobile_research\\android-platforms"
					}
					
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.52.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    }

}
